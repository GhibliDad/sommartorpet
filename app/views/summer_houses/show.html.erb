<div>
  <%= cl_image_tag @summer_house.photo.key, crop: :fill, class: 'show-img' %>
  </div>
  <div class="container px-md-5">
    <div class="row justify-content-between my-5">
      <div class="col-12 col-md-4 text-left info-col d-flex flex-column">
        <h1><%= @summer_house.title %> </h1>
        <p class="mt-3"><strong>Price:</strong> <%= @summer_house.price %>â‚¬</p>
        <p><strong>Location:</strong> <%= @summer_house.city %></p>
        <p><strong>Capacity:</strong> <%= @summer_house.capacity %> people</p>
        <div class="mt-auto row">
          <% if current_user == @summer_house.user %>
            <div class="col-12 d-flex">
              <p class="flex-grow-1"><%= link_to "Delete this house", summer_house_path, method: :delete, class: "btn btn-danger text-white rounded p-3 w-100"%></p>
            </div>
          <% else %>
            <div class="col-12 d-flex">
              <p class="flex-grow-1"><%= link_to "Book this house!", new_summer_house_booking_path(@summer_house), class: "btn btn-warning text-white rounded p-3 w-100"%></p>
            </div>
          <% end %>
          <div class="col-12">
            <%= link_to "Go back", root_path, class: "btn btn-outline-warning rounded p-3 w-100" %>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-8 text-left d-flex" id="text-flow">
        <div style="column-width: 250px">
          <p class="px-3 pt-5 pt-md-1"><%= @summer_house.description %></p><br>
        </div>
      </div>
    </div>
    <% if @markers %>
      <div class="mb-5" id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    <% end %>
  </div>
</div>
