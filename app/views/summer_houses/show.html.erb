<div class="container border d-flex justify-content-left px-5">
  <div class="row justify-content-center">
    <div class="col my-5 col-sm">
      <h1 class="font-weight-bold"><%= @summer_house.title %> </h1>
      <%= cl_image_tag @summer_house.photo.key, height: 300, width: 400, crop: :fill %>
      <h2>Description: <%= @summer_house.description %></h2><br>
      <p>Price: <%= @summer_house.price %></p>
      <p>Location: <%= @summer_house.location %></p>
      <p>Capacity: <%= @summer_house.capacity %></p>
      <p><%= link_to "Delete this house", summer_house_path, method: :delete, class: "btn btn-danger text-white rounded"%></p>
      <p><%= link_to "Book this house!", new_summer_house_booking_path(@summer_house), class: "btn btn-primary text-white rounded"%></p>
      <p><%= link_to "Go back", root_path, class: "btn btn-outline-primary" %></p>
    </div>
  </div>
</div>
