<div class="row justify-content-center">
  <div class="col-6">
    <h1>Here are the summer houses available today!</h1>
    <ul>
      <% @summer_houses.each do |house| %>
        <li>
          <%= link_to summer_house_path(house) do %>
          <div class="border">
            <%= cl_image_tag house.photo.key, height: 300, width: 400, crop: :fill %>
            <p><%= house.title %></p>
            <p><%= house.description %></p>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    <h6><%= link_to "ADD SUMMER HOUSE", new_summer_house_path, class: "btn btn-primary text-white rounded"%></h6>
  </div>
</div>
